generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// Define your enums first
enum Gender {
  male
  female
  other
}

enum Role {
  customer
  shipper
  shop_owner
}

model User {
  id                  String    @id @default(uuid())     // UUID primary key
  firstName           String
  lastName            String
  email               String    @unique
  phoneNumber         String    @unique
  username            String    @unique
  password            String
  currentRefreshToken String?
  dateOfBirth         DateTime
  gender              Gender
  addressLine1        String
  addressLine2        String?
  city                String
  nation              String
  role                Role

  customer            Customer?
  shipper             Shipper?
  shopOwner           ShopOwner?

}

model Customer {
  point  Int     @default(0)          
  // Relationship to User model
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @id 
}

model Shipper{
  userId String @id
  user User @relation(fields: [userId], references: [id],onDelete: Cascade)
  shipmentInventoryId String?
}

model ShopOwner{
  userId String @id
  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
  numOfShop Int @default(0)
}
